@page
@model racewrangler.Pages.Seasons.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Seasons[0].Year)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Seasons) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Year)</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Year">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Year">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Year">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
